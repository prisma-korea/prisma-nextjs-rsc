{
  "name": "prisma-nextjs-graphql",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://prisma-korea.github.io/prisma-next-rsc",
  "scripts": {
    "dev": "concurrently \"next dev\" \"tailwindcss --input ./styles/root.css --output ./styles/output.css --watch\"",
    "build": "tailwindcss ./styles/root.css --output ./styles/output.css && yarn generate:prisma && next build",
    "export": "next export",
    "start": "next start",
    "lint": "next lint && yarn eslint",
    "eslint": "eslint --ext .ts,.tsx,.js,.jsx src server app",
    "seed": "dotenv -e .env.local -- prisma db seed",
    "migrate:dev": "dotenv -e .env.local -- prisma migrate dev",
    "migrate:deploy": "dotenv -e .env.local -- prisma migrate deploy",
    "generate:nexus": "ts-node --transpile-only ./server/schema",
    "generate:prisma": "prisma generate",
    "generate": "yarn generate:nexus && yarn generate:prisma",
    "test": "vitest"
  },
  "dependencies": {
    "@apollo/server": "^4.7.1",
    "@crello/react-lottie": "^0.0.11",
    "@formatjs/intl-localematcher": "^0.2.32",
    "@primer/octicons-react": "^19.1.0",
    "@prisma/client": "4.14.0",
    "@types/node": "20.1.5",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "client-only": "^0.0.1",
    "graphql": "^16.6.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-middleware": "^6.1.34",
    "negotiator": "^0.6.3",
    "next": "^13.4.2",
    "next-pwa": "^5.6.0",
    "nexus": "^1.3.0",
    "prisma": "^4.14.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hamburger-menu": "^1.2.1",
    "react-hook-form": "^7.43.9",
    "react-simple-snackbar": "^1.1.11",
    "server-only": "^0.0.1",
    "tiny-invariant": "^1.3.1",
    "typescript": "5.0.4",
    "usehooks-ts": "^2.9.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@dooboo/eslint-config-react": "^1.2.0",
    "@svgr/webpack": "^8.0.1",
    "@tailwindcss/forms": "^0.5.3",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/negotiator": "^0.6.1",
    "@types/react-hamburger-menu": "^0.0.4",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "autoprefixer": "^10.4.14",
    "clsx": "^1.2.1",
    "concurrently": "^8.0.1",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.40.0",
    "eslint-config-next": "13.4.2",
    "flatten-tailwindcss-theme": "^1.0.0",
    "postcss": "^8.4.23",
    "prettier": "^2.8.8",
    "tailwind-merge": "^1.12.0",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1"
  },
  "prisma": {
    "seed": "ts-node --transpile-only ./prisma/seed.ts"
  },
  "packageManager": "yarn@3.5.1"
}
